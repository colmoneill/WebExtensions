{

  "manifest_version": 2,
  "name": "Scrollometer",
  "version": "1.0",

  "description": "Measures distance scrolled in real world units.",

  "browser_style": "True",

  "icons": {
    "48": "icons/ladder.png"
  },

  "applications": {
    "gecko": {
      "id": "mail@colm.be",
      "strict_min_version": "45.0.0"
    }
  },

  "permissions": [
    "activeTab",
    "storage",
    "tabs"  
  ],

  "background": {
  "scripts": ["background/background-script.js"]
},

  "browser_action": {
    "default_icon": "icons/ladder.png",
    "default_title": "Scollometer",
    "default_popup": "popup/scrollometer.html"
  },

  "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": ["content_scripts/count_metrics.js"]
  }
],

  "options_ui": {
    "page": "options/options.html"
  }

}
